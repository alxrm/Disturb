<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/settings_header_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_settings_background"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:text="Sms"
        android:textColor="@color/color_text_secondary_dark"
        android:textSize="15sp"
        />

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/color_separator_dark"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Notify about sms messages"
        android:textColor="@color/color_text_primary_dark"
        android:textSize="16sp"
        />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:checked="true"
        />

  </RelativeLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.2dp"
      android:layout_gravity="bottom"
      android:alpha="0.5"
      android:background="@color/color_separator_dark"
      />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Magnify confirmation codes"
        android:textColor="@color/color_text_primary_dark"
        android:textSize="16sp"
        />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:checked="true"
        />

  </RelativeLayout>

</LinearLayout>