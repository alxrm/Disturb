<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_calls_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

  <TextView
      android:id="@+id/settings_calls_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/color_settings_background"
      android:fontFamily="@font/roboto_medium_family"
      android:paddingBottom="10dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:paddingTop="10dp"
      android:text="Calls"
      android:textColor="@color/color_text_secondary_dark"
      android:textSize="15sp"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/color_separator_dark"
      />

  <RelativeLayout
      android:id="@+id/settings_calls_toggle_item"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Notify about calls"
        android:textColor="@color/color_text_primary_dark"
        android:textSize="16sp"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/settings_calls_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:checked="true"
        />

  </RelativeLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.2dp"
      android:layout_gravity="bottom"
      android:alpha="0.5"
      android:background="@color/color_separator_dark"
      />

  <LinearLayout
      android:id="@+id/settings_calls_missed"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      android:gravity="center_vertical"
      android:orientation="vertical"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Missed call"
        android:textColor="@color/color_text_primary_dark"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/settings_calls_missed_behavior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Edit message"
        android:textColor="@color/color_text_secondary_dark"
        android:textSize="12sp"
        />

  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.2dp"
      android:layout_gravity="bottom"
      android:alpha="0.5"
      android:background="@color/color_separator_dark"
      />

  <LinearLayout
      android:id="@+id/settings_calls_finished"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      android:gravity="center_vertical"
      android:orientation="vertical"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finished call"
        android:textColor="@color/color_text_primary_dark"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/settings_calls_finished_behavior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Delete message"
        android:textColor="@color/color_text_secondary_dark"
        android:textSize="12sp"
        />

  </LinearLayout>
</LinearLayout>